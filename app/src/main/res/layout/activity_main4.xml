<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/questionImageView"
        android:layout_width="match_parent"
        android:layout_height="281dp"
        android:layout_centerInParent="true"
        android:src="@drawable/durian" />


    <CheckBox
        android:id="@+id/option1CheckBox"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_below="@+id/questionImageView"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="Съедобный" />

    <CheckBox
        android:id="@+id/option2CheckBox"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_below="@+id/option1CheckBox"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:text="Ядовитый   " />

    <CheckBox
        android:id="@+id/option3CheckBox"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_below="@+id/option2CheckBox"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:text="Вкусный     " />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/option3CheckBox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Следующий вопрос" />

</RelativeLayout>
