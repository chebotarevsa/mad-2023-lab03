<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/questionImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/watermelon" />

    <RadioButton
        android:id="@+id/option1RadioButton"
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:layout_below="@+id/questionImageView"
        android:layout_centerHorizontal="true"

        android:text="Овощ " />

    <RadioButton
        android:id="@+id/option2RadioButton"
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:layout_below="@+id/option1RadioButton"
        android:layout_centerHorizontal="true"
        android:text="Фрукт" />

    <RadioButton
        android:id="@+id/option3RadioButton"
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:layout_below="@+id/option2RadioButton"
        android:layout_centerHorizontal="true"
        android:text="Ягода" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/option3RadioButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:minHeight="48dp"
        android:text="Следующий вопрос" />

</RelativeLayout>
