<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_little"
    android:background="@color/barbiePink">

    <ImageView
        android:id="@+id/image3"
        android:layout_width="@dimen/margin_nothing"
        android:layout_height="@dimen/margin_nothing"
        android:src="@drawable/third"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <TextView
        android:id="@+id/question3Text"
        android:layout_width="@dimen/margin_nothing"
        android:layout_height="wrap_content"
        android:text="@string/question3"
        android:textSize="@dimen/margin_middle"
        android:textStyle="bold"
        android:textColor="@color/barbieText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/checkBoxLayout"
        android:layout_width="@dimen/margin_nothing"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/question3Text"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin_little">

        <CheckBox
            android:id="@+id/option3a"
            android:textSize="@dimen/title_text_little"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/option3a"

            android:textColor="@color/barbieText" />

        <CheckBox
            android:id="@+id/option3b"
            android:textSize="@dimen/title_text_little"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/option3b"

            android:textColor="@color/barbieText" />

        <CheckBox
            android:id="@+id/option3c"
            android:textSize="@dimen/title_text_little"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/option3c"

            android:textColor="@color/barbieText" />

        <CheckBox
            android:id="@+id/option3d"
            android:textSize="@dimen/title_text_little"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/option3d"

            android:textColor="@color/barbieText" />

    </LinearLayout>

    <Button
        android:id="@+id/nextButton3"
        android:text="@string/next"
        android:layout_width="@dimen/margin_nothing"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_little"
        app:layout_constraintTop_toBottomOf="@id/checkBoxLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/BarbieButtonStyle"
        android:backgroundTint="@color/barbieButton"/>


</androidx.constraintlayout.widget.ConstraintLayout>
