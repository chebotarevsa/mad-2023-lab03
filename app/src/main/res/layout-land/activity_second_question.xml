<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_little"
    android:background="@color/barbiePink">

    <ImageView
        android:id="@+id/image2"
        android:layout_width="@dimen/margin_nothing"
        android:layout_height="@dimen/margin_nothing"
        android:src="@drawable/second"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.5"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <TextView
        android:id="@+id/question2Text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/question2"
        android:textSize="@dimen/margin_middle"
        android:textStyle="bold"
        android:textColor="@color/barbieText"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Switch
        android:id="@+id/switch2"
        android:layout_width="@dimen/margin_nothing"
        android:layout_height="@dimen/margin_big"
        android:thumbTint="@color/barbieButton"
        android:trackTintMode="multiply"
        android:textSize="@dimen/margin_big"
        android:textOn="@string/yes"
        android:textOff="@string/no"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/question2Text"
        android:layout_marginTop="@dimen/margin_middle"/>

    <Button
        android:id="@+id/nextButton2"
        android:text="@string/next"
        android:layout_width="@dimen/margin_nothing"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_little"
        app:layout_constraintTop_toBottomOf="@id/switch2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/BarbieButtonStyle"
        android:backgroundTint="@color/barbieButton"/>


</androidx.constraintlayout.widget.ConstraintLayout>
