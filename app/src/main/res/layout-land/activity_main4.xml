<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity4">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:text="@string/question3"
        android:textSize="@dimen/sizeQuestion1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="216dp"
        android:layout_height="206dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/logo_java" />

    <Button
        android:id="@+id/button"
        android:layout_width="475dp"
        android:layout_height="55dp"
        android:layout_marginEnd="128dp"
        android:text="@string/nextQuestion"
        android:textSize="@dimen/SizeTextButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.955" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="@dimen/widthCheckBox"
        android:layout_height="@dimen/heightCheckBox"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        android:text="@string/possibleAnswerNum1"
        android:textSize="@dimen/textSizeCheckBox"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="172dp"
        android:layout_height="42dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        android:text="@string/possibleAnswerNum2"
        android:textSize="@dimen/textSizeCheckBox"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/checkBox" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="178dp"
        android:layout_height="45dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="4dp"
        android:text="@string/possibleAnswerNum3"
        android:textSize="@dimen/textSizeCheckBox"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/checkBox2" />

    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="173dp"
        android:layout_height="43dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        android:text="@string/possibleAnswerNum4"
        android:textSize="@dimen/textSizeCheckBox"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/checkBox3" />


</androidx.constraintlayout.widget.ConstraintLayout>